@model IEnumerable<Disaster_Allievation_Foundation_.Models.monetary_donations>

@{
    ViewData["Title"] = "Index";
}

<h1>Monetary Donations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Donor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Donor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Monetary_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Monetary_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Monetary_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
