@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3 class="display-4">The Disaster Allievation Foundation (ST10104487)</h3>

    <br />
    <p>The Disaster Alleviation Foundation, a non-profit organization, seeks a system to track donations 
        and aid dispatched for disaster relief. The aim is to efficiently manage and allocate resources 
        for practical assistance during disasters.</p>

        <br/>
    <div class="container">
        <div class="row">
            <div class="col-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">Available Money: <span class="badge bg-primary">@Model.totalMoney</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br/>
    <div class="container">
        <div class="row">
            <div class="col-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">Total Goods: <span class="badge bg-primary">@Model.totalAllocatedMoney</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="container">
        <div class="row">
            <div class="col-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">Total Monetary Donations: <span class="badge bg-primary">@Model.monetaryDonations</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br/>
@foreach (var disaster in Model.disaster)
{
    <div class="donation-section" style="background-color: white; color: mediumpurple;">
        <h2 class="h2">
            @disaster.StartDate.ToShortDateString().ToUpper() - @disaster.EndDate.ToShortDateString().ToUpper()
        </h2>
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 20%;">Location</th>
                    <th style="width: 40%;">Description</th>
                    <th style="width: 40%;">Required Aids</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@disaster.Location</td>
                    <td>
                        @if (disaster.Description.Length > 60)
                        {
                            @disaster.Description.Substring(0, 60)
                        }
                        else
                        {
                            @disaster.Description
                        }
                    </td>
                    <td>@disaster.RequiredAid</td>
                </tr>
            </tbody>
        </table>

       
    </div>
}

